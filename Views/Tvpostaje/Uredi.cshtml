@model TvRaspored.ViewModels.TvpostajeDodajUrediViewModel

<h1>Uredi tv postaju</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Uredi" method="post">
            <input asp-for="TvpostajaId" type="hidden" />
            <div class="form-group">
                <label asp-for="ModeratorId" class="control-label">Moderator</label>
                <select asp-for="ModeratorId" class="form-control">
                    <option value="">Odaberi...</option>
                    @foreach (var m in Model.Moderatori)
                    {
                        if (m.KorisnikId == Model.ModeratorId)
                        {
                            <option value=@m.KorisnikId selected>@m.Ime @m.Prezime</option>
                        }
                        else
                        {
                            <option value=@m.KorisnikId>@m.Ime @m.Prezime</option>
                        }
                    }
                </select>
                <span asp-validation-for="ModeratorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
